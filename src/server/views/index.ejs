<!DOCTYPE html>
<html lang="en" ng-app='marketoApp'>
<head>
    <meta charset="utf-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>cribkeeper Cribbage game manager and tracker</title>
    <link rel="stylesheet" href="css/cribkeeper.css" />
</head>

<body>

    <div id="content">

        <div id="playerOne">
            <div class="phaseNav">
                <button type="button" class="active">Deal</button>
                <button type="button">Play</button>
                <button type="button">Score</button>
            </div>
            <div class="phase active" data-phase="deal">
                <button type="button">His Heels</button>
            </div>
            <div class="phase" data-phase="play">
                <button type="button">15</button>
                <button type="button">31</button>
                <button type="button">Pair</button>
                <button type="button">Go</button>
                <button type="button">Run</button>
            </div>
            <div class="phase" data-phase="score">
                <button type="button">15</button>
                <button type="button">Pair</button>
                <button type="button">Pairs Royal</button>
                <button type="button">Pairs Double Royal</button>
                <button type="button">Run</button>
                <button type="button">Double Run</button>
            </div>
            <div class="playerDetails">
                <span>Player 1</span>
                <span id="playerOneScore">0</span>
            </div>
        </div>

        <div id="playerTwo">
            <div class="phaseNav">
                <button type="button" class="active">Deal</button>
                <button type="button">Play</button>
                <button type="button">Score</button>
            </div>
            <div class="phase active" data-phase="deal">
                <button type="button">His Heels</button>
            </div>
            <div class="phase" data-phase="play">
                <button type="button">Pair</button>
                <button type="button">15</button>
                <button type="button">Go</button>
                <button type="button">Run</button>
                <button type="button">31</button>
            </div>
            <div class="phase" data-phase="score">
                <button type="button">15</button>
                <button type="button">Pair</button>
                <button type="button">Pairs Royal</button>
                <button type="button">Pairs Double Royal</button>
                <button type="button">Run</button>
                <button type="button">Double Run</button>
            </div>
            <div class="playerDetails">
                <span>Player 2</span>
                <span id="playerTwoScore">0</span>
            </div>
        </div>

    </div>

    <script src='javascript/main.js'></script>
</body>
</html>
